<h1><%= @user.username %></h1>

<h2>Created Events</h2>
<% if @created_events.size.zero? %>
  <p>None</p>
<% else %>
  <ul>
    <% @created_events.each do |event| %>
      <li><%= link_to event.name, event %></li>
    <% end %>
  </ul>
<% end %>

<h2>Attending Events</h2>
<% if @attending_events.size.zero? %>
  <p>None</p>
<% else %>
  <ul>
    <% @attending_events.each do |event| %>
      <li><%= link_to event.name, event %></li>
    <% end %>
  </ul>
<% end %>